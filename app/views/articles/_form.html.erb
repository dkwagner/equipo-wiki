<% if @article.errors.any? %>
  <ul>
    <%= @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @article do |f| %>
  <div>
    <%= f.label :title %>
  </div>
  <div>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %>
  </div>
  <div>
    <%= f.cktext_area :body, rows: 10 %>
  </div>
  <div>
    <%= f.label :images, 'Upload Images'%>
  </div>
  <div>
    <%= f.file_field :images, multiple: true, direct_upload: true %>
  </div>
  <div>
    <%= f.label :comment, "Add comments to picture"%>
  </div>
  <div>
    <%= f.text_field :comment%>
  </div>
  <% if admin_signed_in?%>
    <div>
      <%= f.label :locked, "Lock this article from editing?"%>
      <%= f.check_box :locked%>
    </div>
  <% end %>
  <div>
    <%= f.submit %>
  </div>
<% end %>
